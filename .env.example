# Slack Provider Test Configuration
# Copy this file to .env and fill in with your actual values
# Then run: source .env

# Your Slack bot token (required)
export SLACK_TOKEN="xoxb-your-token-here"

# Bot/Creator user - the user that creates resources (usually the bot itself)
# Get bot info: curl -H "Authorization: Bearer $SLACK_TOKEN" https://slack.com/api/auth.test
# Note: Only ID is needed, name/email are not used in tests
export SLACK_TEST_USER_CREATOR_ID="UXXXXXXXXXX"

# Test user 1 - used for user lookup and member management tests
# Get user info: Click user profile > More > Copy member ID
# Or API: curl -H "Authorization: Bearer $SLACK_TOKEN" "https://slack.com/api/users.lookupByEmail?email=user@example.com"
export SLACK_TEST_USER_00_ID="UXXXXXXXXXX"
export SLACK_TEST_USER_00_NAME="username1"
export SLACK_TEST_USER_00_EMAIL="user1@example.com"

# Test user 2 - must be different from test user 1
# Required for testing add/remove member functionality
export SLACK_TEST_USER_01_ID="UXXXXXXXXXX"
export SLACK_TEST_USER_01_NAME="username2"
export SLACK_TEST_USER_01_EMAIL="user2@example.com"

# Run acceptance tests with:
# source .env && make testacc
